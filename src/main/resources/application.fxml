<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gadelkareem.awsclient.application.Controller">
    <children>
        <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#initPreferences" text="Preferences" />
                                <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" onAction="#about" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </MenuBar>
                <HBox alignment="TOP_RIGHT">
                    <children>
                        <ChoiceBox fx:id="regionMenu" onAction="#changeRegion" prefWidth="150.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <GridPane fx:id="preferencesForm" alignment="CENTER" layoutY="58.0" visible="false" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="55.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="389.0" minWidth="10.0" prefWidth="212.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="613.0" minWidth="10.0" prefWidth="548.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
            </rowConstraints>
            <children>
                <Label alignment="BASELINE_LEFT" contentDisplay="CENTER" text="Access Key ID">
                    <font>
                        <Font name="Verdana" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="preferencesAccessKey" GridPane.columnIndex="1" />
                <Label alignment="BASELINE_LEFT" contentDisplay="CENTER" text="Secret Access Key" GridPane.rowIndex="1">
                    <font>
                        <Font name="Verdana" size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="preferencesSecretKey" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label alignment="BASELINE_LEFT" contentDisplay="CENTER" text="Login Username" GridPane.rowIndex="2">
                    <font>
                        <Font name="Verdana" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="preferencesEc2User" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label alignment="BASELINE_LEFT" contentDisplay="CENTER" text="Private keys path" GridPane.rowIndex="3">
                    <font>
                        <Font name="Verdana" size="14.0" />
                    </font>
                </Label>
                <HBox GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <TextField fx:id="preferencesKeysPath" text="" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#directoryChooser" text="..." />
                    </children>
                </HBox>
                <CheckBox fx:id="preferencesDisplayLoad" mnemonicParsing="false" text="Display instance load column" GridPane.rowIndex="4" />
                <Button defaultButton="true" mnemonicParsing="false" onAction="#savePreferences" text="Save Preferences" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </GridPane>
        <TableView fx:id="tableView" layoutY="58.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="55.0">
            <columns>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="refreshTable" mnemonicParsing="false" text="Refresh" />
                        <MenuItem fx:id="launchShell" mnemonicParsing="false" text="Open Shell" />
                        <MenuItem fx:id="info" disable="true" mnemonicParsing="false" text="Display Info" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </children>
</AnchorPane>
